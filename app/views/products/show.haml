
.container
  .row
    .col-sm-12
      %h3= @product.name
      %hr
      .row
        .col-sm-8
          = image_tag @product.image.url('_1024x768d'), class: 'img-responsive'
        .col-sm-4
          %p
            = t(:Price)
            %strong= @product.price
          %p= @product.description if @product.description.present?
          = link_to 'Ordina', '#',class: 'btn btn-primary'