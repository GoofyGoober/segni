= form_for @opera do |f|
  - if @opera.errors.any?
    #error_explanation
      %h2= "#{pluralize(@opera.errors.count, "error")} prohibited this opera from being saved:"
      %ul
        - @opera.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_area :name
  .field
    = f.label :year
    = f.date_select :year
  .field
    = f.label :archive_index
    = f.number_field :archive_index
  .field
    = f.label :website_id
    = f.number_field :website_id
  .field
    = f.label :image
    = f.text_field :image
  .actions
    = f.submit 'Save'
