.container
  .row
    .col-sm-12(style="padding-top:20px")
      %strong
        = @opera.name
      = " / #{@opera.year.year} / #{@opera.surface.name} / #{@opera.size}"

      .pull-right
        - if @opera.prev.present?
          = link_to '<', @opera.prev, id: 'prev'
        - if @opera.next.present?
          = link_to '>', @opera.next, id: 'next'
%hr
.container
  .row
    .col-sm-12
      - image_tag_ = image_tag @opera.image.url('_1150x850d'), class: 'img-responsive', style:'margin: 0 auto'

      - if @opera.next.present?
        = link_to image_tag_, @opera.next
      - else
        = link_to image_tag_, @opera.first_of_album
      - if @opera.description.present?
        %p(style="margin-top:20px")= simple_format @opera.description
= render 'operas/javascript_for_gallery'
