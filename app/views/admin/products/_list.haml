%table.table.table-striped
  %thead
    %tr
      %th Image
      %th Name
      %th Price
      %th
        .pull-right
          = link_to 'Add product', new_admin_product_path, class: 'btn btn-primary btn-xs'

  %tbody
    - products.each do |product|
      %tr
        %td= image_tag product.image.url(:_20x20c)
        %td= product.name
        %td= product.price
        %td
          .pull-right
            = link_to 'Preview', [:admin, product], class: 'btn btn-xs btn-link'
            = link_to 'Edit', edit_admin_product_path(product), class: 'btn btn-xs btn-link'
            = link_to 'Destroy', product, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'btn btn-link btn-xs'