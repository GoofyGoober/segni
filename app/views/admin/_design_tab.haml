.panel.panel-default
  .panel-heading
    %strong Design
  .panel-body
    = simple_form_for [:admin, @website], remote: true, authenticity_token: true  do |f|
      = f.association :template, prompt: false
      = f.input :logo
      = f.input :css, input_html: {rows: 10}
      = f.input :js, input_html: {rows: 10}
      = f.input :head, input_html: {rows: 5}
      = f.input :button_open_menu
      = f.input :button_language
      = f.button :submit, style: 'display: none'