= f.simple_fields_for :images do |images|
  = render 'image_fields', f: images
.col-sm-12(style="margin-top: 20px")
  = link_to_add_association 'Add another image', f, :images, class: 'btn btn-block btn-default btn-xs'
.col-sm-12
  = f.input :container_fluid
  = f.input :sliding
  .row
    .col-sm-6= f.input :margin, label: 'Margin between images'
    .col-sm-6= f.input :num_elements