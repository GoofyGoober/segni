.col-sm-12
  .panel.panel-default
    .panel-body
      = simple_form_for [:admin, block] do |f|
        .row
          - if block.custom_type == "image-block"
            .col-sm-12
              .row
                - [1,2,3,4,5,6].each do |element|
                  .col-sm-4
                    - if block.send("image_#{element}").present?
                      - url = block.send("image_#{element}").url(:block6)
                      = image_tag url, class: 'btn-upload-img img-responsive'
                    = f.input "image_#{element}".to_sym
                .col-sm-12
                  = f.button :submit, class: 'btn btn-primary'
                  = link_to 'Delete', [:admin, block], :method => :delete, class: 'btn btn-danger'
          - elsif block.custom_type == "products-block"
            .col-sm-12
              .row
                - @website.products_first_page.each do |product|
                  .col-sm-4
                    = link_to image_tag(product.image.url(:_200x200c))
                    %br
                    = link_to product.name, [:edit, :admin, product]
          - else
            .col-sm-6
              = f.input :title_it,   as: :string
              = f.input :content_it, as: :text
              = f.input :action_it,  as: :string
            / .col-sm-6
            /   = f.input :title_en,   as: :string
            /   = f.input :content_en, as: :text
            /   = f.input :action_en,  as: :string
            .col-sm-6
              - if block.background_image.present?
                = image_tag block.background_image.url(:medium), class: 'btn-upload-img'
              = f.input :background_image
            .col-sm-12
              = f.input_field :full_height, label: false
              Full height
              = f.input_field :colors_inverted, label: false
              Colors inverted
            .col-sm-12
              = f.button :submit, class: 'btn btn-primary btn-xs'
              = link_to 'Delete', [:admin, block], :method => :delete, class: 'btn btn-danger btn-xs'