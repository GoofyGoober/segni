.container-fluid
  .row
    .col-xs-4
      %hr(style="margin-top:0")
      = link_to raw('<strong>Admin area</strong>'), {controller: 'dashboard', action: 'home'}, class: 'btn btn-default'
      .pull-right= link_to 'Close editor', @page, target: '_blank', class: 'btn btn-primary'
      %hr

      .row
        = simple_form_for [:admin, @page] do |f|
          .col-sm-12
            = f.input :title_it
            / = f.input :content_it, as: :text
          / .col-sm-6
          /   = f.input :title_en
          /   = f.input :content_en, as: :text
          .col-sm-12
            = f.button :submit, class: 'btn btn-primary btn-xs'
            .clearfix

      - if action_name != 'new'
        %hr
        .row
          .col-sm-12
            = button_to 'Add text block', [:admin, SimpleBlock.new, page_id: @page.id], class: 'btn btn-primary btn-xs', style: 'float: left; margin-right: 10px'
            = button_to 'Add images', [:admin, SimpleBlock.new, page_id: @page.id, custom_type: "image-block"], class: 'btn btn-primary btn-xs', style: 'float: left; margin-right: 10px'
            = button_to 'Add products', [:admin, SimpleBlock.new, page_id: @page.id, custom_type: "products-block"], class: 'btn btn-primary btn-xs', style: 'float: left; margin-right: 10px'

        %hr
      #simpleList
        - @page.simple_blocks.each do |block|
          .row= render 'admin/simple_blocks/form', block: block
    .col-xs-8(style="padding-right: 0")
      %iframe#iframe-preview{src: url_for(@page), style: 'width: 100%; height: 100vh; border: none'}