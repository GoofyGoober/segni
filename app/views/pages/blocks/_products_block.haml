%section.block(style="padding:0")
  - @website.products_first_page.each do |product|
    - if product.image.present?
      - bg_img = asset_path(product.image.url(:_650x350d))
    .six-image-1-cell.col-sm-6{style: "background-image:url(#{bg_img});"}
      %a{ href: url_for(product), style: 'text-decoration: none'}
        .block-hover
          %span.name(style="font-size:32px")= product.name
          %hr
          %span.description= simple_format product.description
          %br
          %span.price_label= product.price_label
  %div(style="clear: both")