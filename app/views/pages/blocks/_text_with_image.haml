- image_url = block.background_image.url(:big_standard) if block.background_image.present?

- if block.content.present? or block.title.present?

  - if block.full_height.present?
    / BLOCK FULL HEIGHT
    / [  ]
    / [  ]
    / [  ]
    %section.block{style: "background-image: url('#{image_url}'); min-height: 60%;", class: block.css_class}
      .container.block-content
        .block-content-inner
          %h2= block.title
          - if block.content.present? or block.action.present?
            %hr
            - if block.content.present?
              %p= simple_format block.content, {}, sanitize: false

    
  - else
    / STANDARD BLOCK
    / [ ]
    %section.block{style: "background-image: url('#{image_url}');", class: block.css_class}
      .container
        - if block.title.present?
          %h2= block.title
        - if block.title.present? and block.content.present?
          %hr
        - if block.content.present?
          - if block.content.present?
            %p= simple_format block.content, {}, sanitize: false
